general {
	output_format = "i3bar"
	colors = true
}

order += "load"
order += "memory"
order += "battery 0"
order += "tztime berlin"

battery 0 {
	last_full_capacity = true
	format = "%status %percentage"
	format_down = ""
	status_chr = "󱊥"
	status_full = "󱊣"
	status_bat = "󱊢"
}

